{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],

    /* מאפשר עבודה עם JS + TS */
    "allowJs": true,

    /* חובה כדי למנוע שגיאות טיפוסים מספריות חיצוניות */
    "skipLibCheck": true,

    /* Strict נשאר */
    "strict": true,

    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,

    /* חשוב: טעינת טיפוסים גלובליים (כולל google.maps) */
    "typeRoots": ["./types", "./node_modules/@types"],

    /* טיפוסים בסיסיים */
    "types": ["node"],

    "plugins": [
      {
        "name": "next"
      }
    ],

    "paths": {
      "@/*": ["./*"]
    }
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "types/**/*.d.ts",
    "**/*.mts"
, "app/dashboard/seating/MobileGuests.jsx", "scripts/createDemoUser.ts", "store/store/demoSeatingStore.js", "scripts/test-email.js"  ],

  "exclude": ["node_modules"]
}
